@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="page-header header-filter" data-parallax="true" style="background-image: url('/assets/img/city-profile.jpg');"></div>
<div class="main main-raised">
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card card-login">
                        <form class="form" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div class="card-header card-header-primary text-center">
                                <h4 class="card-title">Register</h4>
                            </div>
                            <p class="description text-center">You're almost there!</p>
                            <div class="card-body">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">face</i>
                                        </span>
                                    </div>
                                    <input asp-for="Username" type="text" class="form-control" placeholder="Username...">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">mail</i>
                                        </span>
                                    </div>
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Email...">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password...">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="input-group mt-0 pt-0">
                                    <div class="form-check mt-1 pt-1">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" asp-for="AcceptedGDPR"> @Html.DisplayNameFor(m => m.AcceptedGDPR)
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                        </label>
                                        <span asp-validation-for="AcceptedGDPR" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="footer text-center">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}