@model IEnumerable<SensorViewModel>
@{
    ViewData["Title"] = "Sensors";
}
<div class="page-header header-filter" data-parallax="true" style="background-image: url('/assets/img/city-profile.jpg');"></div>
<div class="main main-raised">
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="title">
                    <h2>Your Sensors</h2>
                </div>
                <table class="table table-striped table-responsive border border-info">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Value</th>
                            <th scope="col">Last Updated</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sensor in Model)
                        {
                            <tr>
                                <td scope="row">@sensor.Name</td>
                                <td>@sensor.Description</td>
                                <td>@sensor.Value</td>
                                <td>@sensor.Timestamp</td>
                                <td><a asp-action="Details" asp-controller="Sensor" asp-route-id="@sensor.Id" class="btn btn-success"><i class="material-icons">info</i> Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>